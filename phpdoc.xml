<?xml version="1.0" encoding="UTF-8"?>
<phpdocumentor configVersion="3" xmlns="https://www.phpdoc.org">
    <title>DiarioPresenca - Documentação do Sistema</title>

    <paths>
        <output>docs/phpdoc</output>
        <cache>.phpdoc/cache</cache>
    </paths>

    <version number="1.0.0">
        <api>
            <source dsn=".">
                <path>app/Models</path>
                <path>app/Http/Controllers</path>
                <path>app/Http/Requests</path>
            </source>

            <output>api</output>

            <ignore hidden="true" symlinks="true">
                <path>vendor/**/*</path>
                <path>node_modules/**/*</path>
            </ignore>

            <extensions>
                <extension>php</extension>
            </extensions>

            <visibility>public</visibility>
            <visibility>protected</visibility>

            <default-package-name>DiarioPresenca</default-package-name>
        </api>
    </version>
</phpdocumentor>
